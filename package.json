{
  "name": "api",
  "version": "1.0.0",
  "description": "api.broiler.dev - Microservice Gateway API",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "start:dev": "npm run dev",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "migrate:create": "dotenv -e .env node-pg-migrate create -m ./migrations",
    "migrate:up": "dotenv -e .env node-pg-migrate up -m ./migrations",
    "migrate:down": "dotenv -e .env node-pg-migrate down -m ./migrations",
    "migrate:redo": "npm run migrate:down && npm run migrate:up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3roiler/api.git"
  },
  "author": "3roiler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3roiler/api/issues"
  },
  "homepage": "https://broiler.dev/",
  "dependencies": {
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "dotenv": "^17.2.3",
    "node-pg-migrate": "^8.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "typescript": "^5.9.3",
    "ts-node-dev": "^2.0.0",
    "eslint": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "dotenv-cli": "^11.0.0"
  }
}
