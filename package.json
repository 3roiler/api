{
  "name": "api",
  "version": "1.0.0",
  "description": "api.broiler.dev - Microservice Gateway API",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "migrate:create": "dotenv -e .env node-pg-migrate create -m ./migrations",
    "migrate:up": "dotenv -e .env node-pg-migrate up -m ./migrations",
    "migrate:down": "dotenv -e .env node-pg-migrate down -m ./migrations",
    "migrate:redo": "npm run migrate:down && npm run migrate:up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3roiler/api.git"
  },
  "author": "3roiler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3roiler/api/issues"
  },
  "homepage": "https://broiler.dev/",
  "dependencies": {
    "body-parser": "^2.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "node-pg-migrate": "^7.6.1",
    "pg": "^8.16.3",
    "redis": "^5.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/body-parser": "^1.19.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.2",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/parser": "^8.49.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
